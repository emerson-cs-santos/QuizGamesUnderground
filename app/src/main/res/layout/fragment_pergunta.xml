<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".PerguntaFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPerguntaDescrição"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pergunta"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPerguntaProgresso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pergunta 1 de 5" />

            <ImageView
                android:id="@+id/imgPerguntaImagem"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/imagem_pergunta" />

            <TextView
                android:id="@+id/tvPerguntaStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boa sorte!"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnPerguntaResposta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Resposta 1"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnPerguntaResposta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resposta 2"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnPerguntaResposta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resposta 3"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnPerguntaResposta4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resposta 4"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnPerguntaResposta5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resposta 5"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnPerguntaProxima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:enabled="false"
                android:text="Prosseguir"
                android:textAllCaps="false"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPerguntaPular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pular"
                    android:textAllCaps="false"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnPerguntaAjuda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ajuda"
                    android:textAllCaps="false"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnPerguntaDesistir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Desistir"
                    android:textAllCaps="false"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPerguntaQtdPulos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pulos Restantes:"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvPerguntaQtdAjuda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ajudas Restantes:"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>